.login {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    background-color: rgba(0, 0, 0, 0.5);
}

.bg {
    width: 750rpx;
    height: 100vh;
    position: fixed;
    z-index: -1;
    opacity: 0.;
}

.loginBtn {
    margin-top: 30vh;
    width: 200rpx;
    line-height: 200rpx;
    border-radius: 100rpx;
    background-color: #16b777;
    text-align: center;
    color: #FFF;
    font-size: larger;
    font-weight: bold;
    box-shadow: 0 0 10px #16b777;
}

.usermotto {
    font-size: 12px;
    color: #16b777;
    margin-bottom: 50px;
}