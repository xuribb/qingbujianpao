page {
  overflow: hidden;
}

.map {
  width: 100vw;
  height: 100vh;
  position: fixed;
  z-index: -1;
}

.content {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.2);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20px 0;
}

.content-box {
  background-color: #16b777;
  margin: 20px;
  padding: 20px;
  box-shadow: 0 0 12rpx #16b777;
  border-radius: 20rpx;
}

.content-1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content-2>view{
  font-size: 14px;
  margin: 8px 0;
}

.start-run {
  margin-bottom: 40px;
  border-radius: 20rpx;
  background-color: #16b777;
  box-shadow: 0 0 12rpx #16b777;
  text-align: center;
  color: #FFF;
  font-weight: bold;
}