page {
  overflow: hidden;
}

.map {
  width: 100vw;
  height: 100vh;
  position: fixed;
  z-index: -1;
}

.content {
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  padding: 20px 0;
}

.content-box {
  box-sizing: border-box;
  background-color: #FFF;
  margin: 10px 20px;
  padding: 20px;
  box-shadow: 0 0 3px #FFF;
}